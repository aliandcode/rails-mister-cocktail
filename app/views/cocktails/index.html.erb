<!-- index.html.erb -->
<img src="assets/Ali_Logo.png">
 <%= link_to "+ Add a new Cocktail", new_cocktail_path, class: 'btn-home' %>
<div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <% @cocktails.each do |cocktail| %>
          <div class="ali-card">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% end %>
      </div>
    </div>
</div>

